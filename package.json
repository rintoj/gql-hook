{
  "name": "graphql-hook-generator",
  "version": "0.0.0-development",
  "description": "A utility to generate graphql hook from query string and schema",
  "main": "lib/index.ts",
  "scripts": {
    "build": "rimraf lib && tsc",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rintoj/gql-hook"
  },
  "keywords": [
    "GraphQL",
    "React",
    "Hooks"
  ],
  "author": "Rinto Jose",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rintoj/gql-hook/issues"
  },
  "homepage": "https://github.com/rintoj/gql-hook#readme",
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.27.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.3",
    "ts-jest": "^26.5.6"
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "fs-extra": "^10.0.0",
    "graphql": "^15.5.0",
    "name-util": "^1.1.0",
    "typescript": "^4.2.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.d.{ts,tsx}",
      "!**/node_modules/**",
      "!**/test/**",
      "!**/events/**",
      "!**/src/error/**",
      "!**/src/decorators/**",
      "!coverage/**"
    ]
  }
}
