{
  "name": "gql-hook-codegen",
  "version": "0.0.0-development",
  "description": "A utility to generate graphql hook from query string and schema",
  "main": "lib/index.js",
  "bin": {
    "gql-hook-codegen": "bin/gql-hook-codegen"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rimraf lib && tsc",
    "lint": "tsc --noEmit && eslint . --ext ts --fix",
    "test": "jest",
    "cli": "ts-node --transpile-only src/cli/index.ts",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rintoj/gql-hook-codegen"
  },
  "keywords": [
    "cli",
    "GraphQL",
    "React",
    "Hooks",
    "codegen"
  ],
  "author": "Rinto Jose",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rintoj/gql-hook-codegen/issues"
  },
  "homepage": "https://github.com/rintoj/gql-codegen#readme",
  "devDependencies": {
    "@apollo/client": "^3.3.19",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.23",
    "@types/node-fetch": "^2.5.10",
    "@types/prettier": "^2.7.3",
    "@types/react": "^17.0.8",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "graphql-tag": "^2.12.4",
    "jest": "^29.7.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.3",
    "ts-jest": "^29.1.2"
  },
  "dependencies": {
    "add": "^2.0.6",
    "chalk": "^4.1.1",
    "crypto": "^1.0.1",
    "esm": "^3.2.25",
    "fast-glob": "^3.2.5",
    "fs-extra": "^10.0.0",
    "graphql": "^15.5.0",
    "ink": "^3.0.8",
    "name-util": "^1.3.0",
    "node-fetch": "^2.6.6",
    "prettier": "2.8.8",
    "react": "^17.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^5.3.3",
    "yargs": "^17.0.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "modulePathIgnorePatterns": [
      ".*/build/"
    ],
    "testEnvironment": "node",
    "collectCoverage": false,
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "testPathIgnorePatterns": [
            "/node_modules/",
            "/build/"
          ],
          "isolatedModules": true,
          "tsconfig": "./tsconfig.json"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/build/**",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/src/decorators/**",
      "!**/src/error/**",
      "!**/test/**"
    ]
  }
}
